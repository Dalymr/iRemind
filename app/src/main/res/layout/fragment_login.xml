<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#0e81d1">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:backgroundTint="#0e81d1"
        >


                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/notebook">

                </ImageView>

                <TextView
                    android:id="@+id/appnamelogin"
                    android:layout_width="305dp"
                    android:layout_height="103dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/mandali"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textSize="70sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/mandali"
                    android:text="Login in"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
            android:id="@+id/secTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:text="Email" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="40dp"
            android:autofillHints="email"

            android:ems="10"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/email"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/thirdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="Password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:hint=""
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0e81d1"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:text="Login" />

        <TextView
            android:id="@+id/link_login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="First Time Here ?"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/link_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mandali"
            android:gravity="center"
            android:text="Swipe Right to Register"
            android:textColor="#0e81d1"
            android:textSize="16sp" />




        "</LinearLayout>
</ScrollView>